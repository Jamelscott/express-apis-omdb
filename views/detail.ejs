<%let rating = ""%>
<%let movieNum = parseInt(movie.imdbRating)%>
<%if(movieNum < 2){%>
    <%rating = "⭐"%>
<%} else if (movieNum >=2 && movieNum < 4){%>
        <% rating = "⭐⭐"%>
        <%} else if (movieNum >=4 && movieNum <6){%>
            <%rating = "⭐⭐⭐"%>
            <%} else if (movieNum >=6 && movieNum <8){%>
                <%rating = "⭐⭐⭐⭐"%>
                <%} else {%>
                    <%rating = "⭐⭐⭐⭐⭐"%>
                    <%}%>

<h3>IMDB Star Rating: <%=rating%></h3>
